<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAlbum">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/albumNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/albumNameInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Album Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/createAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="createAlbum"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="@+id/albumNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumNameInput" />
</androidx.constraintlayout.widget.ConstraintLayout>